////////// Tech lamp

Class EquestriaTechLamp : TechLamp replaces TechLamp
{
	Default
	{
		//$NotAngled
	
		//$Arg0 Destroyed
		//$Arg0Enum falsetrue
		Health 5;
		
		DamageFactor "Plasma", 0.05;
		
		Radius 16; Height 80; DeathHeight 80; ProjectilePassHeight -16;
		
		+SOLID
		+NOTAUTOAIMED
		+DONTTHRUST
		+SHOOTABLE
		+NOBLOOD
		+DONTGIB //Remove when XDeath is done
		+RANDOMIZE
		+NOICEDEATH
	}
	States
	{
	Spawn:
		TLMP ABCD 4 Bright A_JumpIf(Args[0]>1, "Destroyed");
		Loop;
		
	Death:
		TNT1 AAAAAAAAAAAAAAAAAAAA 0 A_SpawnProjectile("PuffSparkles", 70, 0, random (0, 360), 2, random (0, 360));
	Destroyed:
		TLMP D -1;
		Stop;
		
	/*XDeath: //Make it be affected by the Realistic Gore and Quake-Ish type setting
		TNT1 BBBBB 0 A_SpawnProjectile("BarrelDebris", random(16, 75), 0, random (0, 360), CMF_AIMDIRECTION, random (-10, -90));
		TLMP D -1;
		Stop;*/
	}
}

