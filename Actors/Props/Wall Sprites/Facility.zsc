Class FlatWall : Actor
{
	Default
	{
		//$Category Wall Sprites
		+NOCLIP +NOGRAVITY +NOINTERACTION
		+WALLSPRITE
		
		Height 40;
		Radius 20;
	}
}

Class ExplosiveWarning : FlatWall
{
	States
	{
	Spawn:
		WALL A -1;
		Stop;
	}
}

Class VoltageWarning : FlatWall
{
	States
	{
	Spawn:
		WALL B -1;
		Stop;
	}
}

Class RadiationWarning : FlatWall
{
	States
	{
	Spawn:
		WALL C -1;
		Stop;
	}
}