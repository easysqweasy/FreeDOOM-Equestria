Class BFGSparkles : PuffSparkles
{
	Default
	{
		+NOGRAVITY
		+NOINTERACTION
		Scale 1;
		BounceFactor 0.15;
		Speed 15;
		Gravity 0.10;
	}
	States
	{
	Spawn:
		PLSS AA 0 A_SetRoll(random(-359, 359));
		
		PLSS A 16;
		PLSS AAA 4;
		BFE2 DDDDD 1 A_SetScale(Scale.X - 0.25, Scale.Y - 0.25);
		Stop;
	}
	Override void Tick()
	{
		Super.Tick();
		if (!isFrozen())
		{
			A_ScaleVelocity(0.90);
			A_Recoil(random(-5, 5));
		}	
	}
}