{
	States
	{
	Spawn:
		TNT1 A 0;
		TNT1 A 0 A_SetRoll(random(-359, 359));
		
	Trail:
		BFS1 AB random(2,4) Bright A_FadeOut(0.1);
		TNT1 AA random(2,4) A_FadeOut(0.1);
