Class EquestriaBaronofHell : BaronOfHell replaces BaronOfHell
{
	Default
	{
		//$Sprite BOSSA2C8
		BloodColor "darkgreen";
		
		+CastSpriteShadow;
		
		PainThreshold 5;
	}
	States
	{
	Spawn:
		IDLB CD 10 A_Look;
		Loop;
	
	Melee:
		BOSS E 8 A_FaceTarget;
		BOSS F 6 A_FaceTarget;
		BOSS G 6 A_CustomMeleeAttack(10 * random(1, 8), "baron/melee", "skel/swing", "BruisersMelee");
		Goto See;
		
	Missile:
		BOSS EF 8 A_FaceTarget;
		BOSS G 8 A_SpawnProjectile("BaronHellBall");
		Goto See;
	
	Death:
		"####" "#" 0 { bSPRITEFLIP = randompick(0, 1); }
		
		BOSS I 8;
		BOSS J 8 A_Scream;
		BOSS K 8;
		BOSS L 8 A_NoBlocking;
		BOSS M 8;
		BOSS N -1 A_BossDeath;
		Stop;
		
	XDeath:
		"####" "#" 0 { bSPRITEFLIP = randompick(0, 1); }
		
		BOSS O 8;
		BOSS P 8 A_Scream;
		BOSS Q 8;
		BOSS R 8 A_NoBlocking;
		BOSS ST 8;
		BOSS U -1 A_BossDeath;
		Stop;
	}
}
 
