Class EquestriaChaingunGuy : ChaingunGuy replaces ChaingunGuy
{
	Default
	{
		Health 70;
		Radius 20; Height 56;
		Mass 100;
		Speed 8;
		PainChance 170;
		
		+CASTSPRITESHADOW;
		+NOINFIGHTSPECIES;
		
		//SeeSound "chainguy/sight";
		//DeathSound "chainguy/death";
		//PainSound "chainguy/pain";
		AttackSound "weapons/chngun";
		//ActiveSound "chaingun/active";
		Dropitem "EquestriaChaingun";
		Species "Couple";
	}
	States
	{
	Spawn:
		CPOS AB 10 A_Look();
		Loop;
	
	See:
		CPOS AABBCCDD 3 A_Chase();
		Loop;
	
	Missile:
		CPOS E 10 A_FaceTarget();
		CPOS FE 4 Bright A_CPosAttack();
		CPOS F 1 A_CPosRefire();
		Goto Missile+1;
	
	Pain:
		CPOS G 3;
		CPOS G 3 A_Pain();
		Goto See;
	
	Death:
		"####" "#" 0 { bSPRITEFLIP = randompick(0, 1); }
		
		CPOS H 5;
		CPOS I 5;
		TNT1 AAA 0
		{
			A_SpawnProjectile("TinyGibGore1", random(0, 8), 0, random (0, 360), CMF_BADPITCH | CMF_ABSOLUTEPITCH, random (10, 90));	
			A_SpawnProjectile("TinyGibGore2", random(0, 8), 0, random (0, 360), CMF_BADPITCH | CMF_ABSOLUTEPITCH, random (10, 90));
		}
		CPOS I 0 A_Scream();
		CPOS J 5 A_NoBlocking();
		CPOS KLM 5;
		CPOS N -1;
		Stop;
	
	XDeath:
		"####" "#" 0 { bSPRITEFLIP = randompick(0, 1); }
		
		CPOS T 0
		{
			A_SpawnItemEx("XDeathGibber",0,0,0,0,0,0,0, SXF_TRANSFERPOINTERS);
			A_SpawnItemEx("BloodExplosionSphere",0,0,0,0,0,0,0, SXF_TRANSFERPOINTERS);
			A_XScream();
			A_NoBlocking();
		}
		CPOS T -1;
		Stop;
	
	Raise:
		CPOS NMLKJIH 5;
		
		"####" "#" 0 { bSPRITEFLIP = 0; }
		Goto See;
  }
}
