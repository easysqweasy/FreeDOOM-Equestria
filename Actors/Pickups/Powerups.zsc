//Invisibility Sphere

Class EquestriaBlurSphere : CustomInventory replaces BlurSphere
{
	Default
	{
		Height 40; Radius 20;

		+COUNTITEM;
		+VISIBILITYPULSE;
		+FLOATBOB;
		+NOGRAVITY;
		+FORCEXYBILLBOARD;
		
		+INVENTORY.BIGPOWERUP;
		+INVENTORY.AUTOACTIVATE;
		+INVENTORY.ALWAYSPICKUP;
		
		Inventory.PickupMessage "$GOTINVIS"; // "Partial Invisibility"
		Inventory.PickupSound "misc/p_pkup";
		Renderstyle "Translucent";
		Alpha 1;
	}
	States
	{
	Spawn:
		PINS ABCDCBA 6 Bright;
		Loop;
		
	Pickup:
		TNT1 A 0
		{
			A_GiveInventory("BlurSphereInventory");
			A_SetBlend("Red", 0.5, 16, "Blue");
		}
		TNT1 A 0 ACS_NamedExecute("BlurMugshot");
		Stop;
	}
}

Class BlurSphereInventory : BlurSphere
{	Default {	RenderStyle "Shaded";	}}

