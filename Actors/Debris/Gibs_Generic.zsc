		Speed 1;
		Scale 0.5;
		Height 2;
		Radius 1;
		
		RenderStyle "Translucent";
		Alpha 0.5;
	}
	States
	{
	Spawn:
		BLUD A 1;
		Loop;
	Death:
		BLUD A 1
